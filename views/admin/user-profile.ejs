  <style>
    /* Styling for the image to make it look like an upload option */
    .upload-container {
      position: relative;
      display: inline-block;
      cursor: pointer;
      text-align: center;
    }

    /* Styling the upload icon */
    .upload-icon {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      font-size: 20px;
      opacity: 0;
      transition: opacity 0.3s;
      border-radius: 50%;
    }

    /* Hover effect to show the upload icon */
    .upload-container:hover .upload-icon {
      opacity: 1;
    }

    /* Optional: Tooltip for better UX */
    .upload-container:hover::after {
      content: 'Click to upload image';
      position: absolute;
      bottom: -30px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #333;
      color: #fff;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 12px;
      white-space: nowrap;
    }

    /* Styling the image */
    #profileImage {
      border-radius: 50%;
      padding: 1px;
      background-color: #007bff;
      transition: all 0.3s ease;
    }

    /* Styling the update button */
    #updateButton {
      display: none;
      margin-top: 10px;
    }
  </style>
