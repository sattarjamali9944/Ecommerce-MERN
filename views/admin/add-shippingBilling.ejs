<!doctype html>
<html lang="en">

<%-include('include/head-css-file.ejs')-%>


<body>
	<!--wrapper-->
	<div class="wrapper">
		<%- include('./include/sidebar.ejs'); -%>
		<!--end sidebar wrapper -->
		<!--start header -->
		<%-include('./include/header.ejs')-%>
		<!--end header -->
		<!--end header -->
		<!--start page wrapper -->
		<div class="page-wrapper">
			<div class="page-content">
				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">Home</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">Add Product</li>
							</ol>
						</nav>
					</div>
					
				</div>
				<!--end breadcrumb-->
				<div class="row">

					<div class="col-xl-12 mx-auto">
						
						
						<div class="card">
							<div class="card-body p-4">
								<a href='/products' class='btn btn-primary float-left'>Products</a>
								<% if (errors.length > 0) { 
									
									%>
									<div class="alert error">
										<ul>
											<% errors.forEach(function(error) { %>
												<li><%= error.msg %></li>
											<% }); %>
										</ul>
									</div>
								<% } %>
							
								
								<form action="/createBillingShipping" method="POST">
      
								<!-- Shipping Information Section -->
								<div class="form-section" id="shipping-info">
									<h3>Shipping Information</h3>
									
									<div class="col-md-8">
										<input type="text" name='userId' value="<%- userId -%>">
										<label for="shipping-name" class="form-label">Name:</label>
										<input type="text" name="shippingName" class="form-control" id="shipping-name" placeholder="Name" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-address" class="form-label">Address:</label>
										<input type="text" name="shippingAddress" class="form-control" id="shipping-address" placeholder="Address" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-city" class="form-label">City:</label>
										<input type="text" name="shippingCity" class="form-control" id="shipping-city" placeholder="City" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-state" class="form-label">State:</label>
										<input type="text" name="shippingState" class="form-control" id="shipping-state" placeholder="State" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-zip" class="form-label">Zip Code:</label>
										<input type="text" name="shippingZip" class="form-control" id="shipping-zip" placeholder="Zip Code" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-phone" class="form-label">Phone:</label>
										<input type="tel" name="shippingPhone" class="form-control" id="shipping-phone" placeholder="Phone" required>
									</div>

									<div class="col-md-8">
										<label for="shipping-email" class="form-label">Email:</label>
										<input type="email" name="shippingEmail" class="form-control" id="shipping-email" placeholder="Email" required>
									</div>
								</div>

								<!-- Billing Information Section -->
								<div class="form-section" id="billing-info">
									<h3>Billing Information</h3>
									
									<div class="col-md-8">
									<label>
										<input type="checkbox" id="same-as-shipping" onchange="copyShippingToBilling()"> Billing same as Shipping
									</label>
									</div>

									<div class="col-md-8">
										<label for="billing-name" class="form-label">Name:</label>
										<input type="text" name="billingName" class="form-control" id="billing-name" placeholder="Name" required>
									</div>

									<div class="col-md-8">
										<label for="billing-address" class="form-label">Address:</label>
										<input type="text" name="billingAddress" class="form-control" id="billing-address" placeholder="Address" required>
									</div>

									<div class="col-md-8">
										<label for="billing-city" class="form-label">City:</label>
										<input type="text" name="billingCity" class="form-control" id="billing-city" placeholder="City" required>
									</div>

									<div class="col-md-8">
										<label for="billing-state" class="form-label">State:</label>
										<input type="text" name="billingState" class="form-control" id="billing-state" placeholder="State" required>
									</div>

									<div class="col-md-8">
										<label for="billing-zip" class="form-label">Zip Code:</label>
										<input type="text" name="billingZip" class="form-control" id="billing-zip" placeholder="Zip Code" required>
									</div>

									<div class="col-md-8">
										<label for="billing-phone" class="form-label">Phone:</label>
										<input type="tel" name="billingPhone" class="form-control" id="billing-phone" placeholder="Phone" required>
									</div>

									<div class="col-md-8">
										<label for="billing-email" class="form-label">Email:</label>
										<input type="email" name="billingEmail" class="form-control" id="billing-email" placeholder="Email" required>
									</div>
								</div>

								<!-- Submit Button -->
								<button type="submit" class="btn btn-primary">Submit</button>
								</form>
							</div>
						</div>
					</div>
				</div>
				<!--end row-->
			</div>
		</div>
		<!--end page wrapper -->
		<!--start overlay-->
		<div class="overlay toggle-icon"></div>
		<!--end overlay-->
		<!--Start Back To Top Button--> <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
		<!--End Back To Top Button-->
		<footer class="page-footer">
			<p class="mb-0">Copyright Â© 2023. All right reserved.</p>
		</footer>
	</div>
	<!--end wrapper-->

	<%-include('include/footer.ejs')-%>

	<script>
    function copyShippingToBilling() {
      const isChecked = document.getElementById('same-as-shipping').checked;
      const fields = ['name', 'address', 'city', 'state', 'zip', 'phone', 'email'];

      fields.forEach(field => {
        const shippingField = document.getElementById(`shipping-${field}`);
        const billingField = document.getElementById(`billing-${field}`);
        billingField.value = isChecked ? shippingField.value : '';
        billingField.readOnly = isChecked;
      });
    }
  </script>